    // å¦åˆ™è¿”å› trueï¼ˆæŒæœ‰ï¼‰
    return true;
}

window.getItem = function getItem(inventory, itemName) {
    // æŸ¥æ‰¾ inventory ä¸­çš„ç‰©å“
    let item = inventory.find(inventoryItem => inventoryItem.name === itemName);
    
